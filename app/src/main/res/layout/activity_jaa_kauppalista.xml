<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/taustak"
    tools:context=".JaaKauppalistaActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#EB78D28C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459">

        <EditText
            android:id="@+id/syota_sposti"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_above="@+id/syota_valinnainen_viesti"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="86dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:hint="@string/syota_sposti"
            android:inputType="textPersonName"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/syota_valinnainen_viesti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jaa_kauppa" />

        <EditText
            android:id="@+id/syota_valinnainen_viesti"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_above="@+id/jaa"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="80dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:hint="@string/syota_valinnainen_viesti"
            android:inputType="textPersonName"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/jaa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syota_sposti" />

        <TextView
            android:id="@+id/jaa_kauppa"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_above="@+id/syota_sposti"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="@string/jaa_kauppalista"
            android:textColor="#003A59"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/syota_sposti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62" />

        <Button
            android:id="@+id/jaa"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="154dp"
            android:layout_marginLeft="154dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/lightblueroundedbutton"
            android:text="@string/jaa"
            android:textColor="#003A59"
            app:layout_constraintTop_toBottomOf="@+id/syota_valinnainen_viesti" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
